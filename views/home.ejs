<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/styles.css" type="text/css">
    <title>Document</title>
</head>
<body>
    <header>
        <div class="container-fluid bg-warning text-center display-4 head">
            TODO-APPLICATION
        </div>
    </header>

    <section id="task-panel">
        <div class="container-fluid py-5 panel-bg">
          <form action="/add-task" method="post">  
            <div class="container d-flex dashboard p-5">
                <div class="row">
                    <input type="text" name="newTask" placeholder="Add a Task..">
                </div>
                <div class="row">
                    <div class="col-6 p-0">
                        <select name="category">
                            <option value="Personal">Personal</option>
                            <option value="Official">Official</option>
                            <option value="Recreational">Recreational</option>
                            <option value="Fitness">Fitness</option>
                        </select>
                    </div>
                    <div class="col-6 p-0">
                        <input type="date" name="date" placeholder="Enter Date">
                    </div>
                </div>
                <div class="row mt-4 d-flex justify-content-center">
                    <button class="btn btn-warning">+ ADD TASK</button>
                </div>
                <div class="row mt-3 text-light d-flex notify">
                    <%= status %>
                </div>    
            </div>
          </form>  
        </div>
    </section>

    <section id="task-list-head">
        <div class="container-fluid task-head bg-warning text-center">
            <i class="fa fa-list-ul" aria-hidden="true"></i> TASK LIST
        </div>
    </section>
    <secton id="task-list-body">
        <div class="container-fluid py-4 task-list-outer">
            <% for(var i of todo){ %>
            <div class="container-fluid myTask-card py-2 mb-2">
                <div class="row ">
                    <div class="col-1 p-0 d-flex justify-content-center">
                       <a data-bs-toggle="modal" data-bs-target="#staticBackdrop"> <input type="checkbox" data-id="<%= i._id %>" data-status="<%= i.status %>" id="myCheck" class="myCheck"></a>
                    </div>
                    <div class="col-8 task-title">
                        <%= i.task %>
                    </div>
                    <div class="col-3 text-center">
                        <a type="button" class="btn myBtn"><%= i.category %></a>
                    </div>
                </div>
                <hr>
                <div class="row mt-2">
                    <div class="col-2 offset-1 d-flex align-items-center" id="task-date">
                        <i class="fa fa-calendar" aria-hidden="true"></i>&nbsp;<%= i.date %>
                    </div>
                    <div class="col-2 offset-7 delete" title="delete-task">
                       <a data-bs-toggle="modal" data-bs-target="#staticBackdrop"><i class="fa fa-trash-o delete-bin" id="delete" data-id="<%= i._id %>" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </secton>

    <section id="modal">
        <!-- Button trigger modal
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                Launch static backdrop modal
            </button> -->
            
            <!-- Modal -->
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>CAUTION</h5>
                        </div>
                        <div class="modal-body" id="modal-msg">
                        <h3 id="modal-head"></h3> 
                        <h6 id="modal-b1">kk</h6>
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Close</button>
                        <a id="update-doc"><button type="button" class="btn btn-danger">CONFIRM</button></a>
                        </div>
                    </div>
                </div>
            </div>
    </section>

<!------------------JavaScript--------------------->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>    
<script src="/js/todo.js" type="text/javascript"></script>

</body>
</html>